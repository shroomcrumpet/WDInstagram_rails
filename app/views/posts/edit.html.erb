<h1>Edit post</h1>

<%= form_with model: @post, local: true do |form| %>

	<p>
		<%= form.label :author %><br>
		<%= form.text_field :author %>
	</p>

	<p>
		<%= form.label :photo_url %><br>
		<%= form.text_area :photo_url %>
	</p>

	<p>
		<%= form.label :caption %><br>
		<%= form.text_field :caption %>
	</p>

	<p>
		<%= form.label :date_taken %><br>
		<%= form.datetime_select :date_taken %>
	</p>

	<p>
		<%= form.submit %>
	</p>

<% end %>

<%= link_to 'Back', posts_path %>