<%= link_to 'InstaFake', controller: 'posts' %><br />
<%= link_to 'Sign-In', new_user_session_url %>
<%= link_to 'Sign-Out', destroy_user_session_url, method: :delete %>

<h1>InstaFake</h1>

<% if user_signed_in? %>
<%= link_to 'New post', new_post_path %>
<% end %>

<table>
  <tr>
    <th>Author</th>
    <th>Photo URL</th>
    <th>Date taken</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.author %></td>
      <td><%= post.photo_url %></td>
      <td><%= post.date_taken %></td>
      <td><%= post.comments.size %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure you want to delete this post?' } %>
      </td>
    </tr>
  <% end %>
</table>


